{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "GeneralMetadata",
  "description": "Record describing a full APT record",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "title": {
      "type": "string",
      "description": "Title of dataset"
    },
    "authors" : {
      "type": "array",
      "description": "Authors of this dataset",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "first_name": {
            "type": "string",
            "description": "Given name"
          },
          "last_name": {
            "type": "string",
            "description": "Family name"
          },
          "affiliation": {
            "type": "string",
            "description": "Affiliation"
          }
        }
      }
    },
    "abstract": {
      "type": "string",
      "description": "Short description of the dataset"
    },
    "dates": {
      "type": "object",
      "description": "List of important dates",
      "additionalProperties": false,
      "properties": {
        "creation_date": {
          "type": "string",
          "description": "Date this dataset was created",
          "format": "date-time"
        },
        "publication_date": {
          "type": "string",
          "description": "Date this dataset was published",
          "format": "date-time"
        }
      },
      "required": ["creation_date"]
    }
  }
}