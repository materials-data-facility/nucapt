{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "SampleMetadata",
  "description": "Record describing a single APT sample",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "sample_name": {
      "type": "string",
      "description": "Title of sample"
    },
    "sample_description": {
      "type": "string",
      "description": "Short description of the sample"
    },
    "metadata": {
      "type": "array",
      "description": "Anything else that is pertinent",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "key": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      }
    }
  }
}