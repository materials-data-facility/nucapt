{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "SampleMetadata",
  "description": "Record describing a single APT sample",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "title": {
      "type": "string",
      "description": "Title of reconstruction"
    },
    "description": {
      "type": "string",
      "description": "Short description of the sample"
    },
    "reconstruction_method": {
      "type": "string",
      "description": "Reconstruction method",
      "enum": [
        "shank_angle",
        "voltage_profile",
        "tip_image"
      ]
    },
    "tip_radius": {
      "type": "number",
      "description": "Initial tip radius (units)",
      "minimum": 0
    },
    "shank_angle": {
      "type": "number",
      "description": "Shank angle (units)",
      "minimum": 0
    },
    "tip_image": {
      "type": "string",
      "description": "SEM image of tip"
    },
    "metadata": {
      "type": "array",
      "description": "Anything else that is pertinent",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "key": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      }
    }
  }
}